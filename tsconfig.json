{
  "compilerOptions": {                        
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,                 
  },
  "include": [
    "./src/"
  ],
  "exclude":[
    "./node_modules", 
    "**/__tests__/*",
    "./dist",
  ],
}
