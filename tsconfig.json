{
  "compilerOptions": {                        
    "target": "es2016",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",                  
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,                 
  },
  "include": [
    "./src/"
  ],
  "exclude":[
    "./node_modules", 
    "**/__tests__/*",
    "./dist",
  ],
}
